package PMTCalibSvc

use SniperKernel v*

use ROOT v* Externals
use Boost v* Externals

library PMTCalibSvc PMTCalibSvc.cc
macro_prepend ROOT_linkopts " -Wl,--no-as-needed "
macro_append ROOT_linkopts " -Wl,--as-needed "


macro_append Boost_linkopts " -lboost_filesystem -lboost_system "

apply_pattern install_python_modules
apply_pattern install_more_includes more="PMTCalibSvc"
apply_pattern linker_library library=PMTCalibSvc
